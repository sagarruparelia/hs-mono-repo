# Environment Configuration Template
# Copy this file to .env.local, .env.staging, or .env.production and fill in the values

#############################################
# Environment
#############################################
NODE_ENV=development
ENVIRONMENT=development

#############################################
# Frontend - Module Federation URLs
#############################################

# Profile MFE
VITE_MFE_PROFILE_URL=http://localhost:4203
# Staging: https://cdn.staging.example.com/mfe/profile/latest
# Production: https://cdn.example.com/mfe/profile/v1.0.0

# Summary MFE
VITE_MFE_SUMMARY_URL=http://localhost:4204
# Staging: https://cdn.staging.example.com/mfe/summary/latest
# Production: https://cdn.example.com/mfe/summary/v1.0.0

#############################################
# API Configuration
#############################################

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:8080
# Staging: https://api.staging.example.com
# Production: https://api.example.com

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

#############################################
# Feature Flags
#############################################
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=true

#############################################
# Authentication (if applicable)
#############################################
VITE_AUTH_DOMAIN=
VITE_AUTH_CLIENT_ID=
VITE_AUTH_AUDIENCE=

#############################################
# Backend (Spring Boot) - BFF
#############################################

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# MongoDB Configuration
SPRING_DATA_MONGODB_URI=mongodb://admin:password123@localhost:27017/hs_mono_repo?authSource=admin
SPRING_DATA_MONGODB_DATABASE=hs_mono_repo

# Redis Configuration
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=redis123

# Active Profile
SPRING_PROFILES_ACTIVE=development

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_HS=DEBUG

#############################################
# AWS Configuration (for deployment)
#############################################
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Buckets (automatically set by deployment)
S3_BUCKET_PROFILE=hs-mono-repo-mfe-profile-${ENVIRONMENT}
S3_BUCKET_SUMMARY=hs-mono-repo-mfe-summary-${ENVIRONMENT}
S3_BUCKET_WEB_CL=hs-mono-repo-web-cl-${ENVIRONMENT}
S3_BUCKET_WEB_HS=hs-mono-repo-web-hs-${ENVIRONMENT}

# CloudFront Distribution IDs (set after terraform apply)
CLOUDFRONT_DISTRIBUTION_ID_STAGING=
CLOUDFRONT_DISTRIBUTION_ID_PROD=

#############################################
# Docker Compose Overrides
#############################################
COMPOSE_PROJECT_NAME=hs-mono-repo
COMPOSE_FILE=docker-compose.yml
