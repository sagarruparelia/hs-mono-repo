# Staging Environment Configuration
# Used for staging deployments

#############################################
# Environment
#############################################
NODE_ENV=production
ENVIRONMENT=staging

#############################################
# Frontend - Module Federation URLs (Staging)
#############################################
# Use 'latest' pointer for staging (always gets newest)
VITE_MFE_PROFILE_URL=https://d1234567890.cloudfront.net/mfe/profile/latest
VITE_MFE_SUMMARY_URL=https://d1234567890.cloudfront.net/mfe/summary/latest

#############################################
# API Configuration (Staging)
#############################################
VITE_API_BASE_URL=https://d1234567890.cloudfront.net/api
VITE_API_TIMEOUT=30000

#############################################
# Feature Flags (Staging)
#############################################
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_DEBUG_MODE=false

#############################################
# Backend (Spring Boot) - Staging
#############################################
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# MongoDB - AWS DocumentDB (Staging)
SPRING_DATA_MONGODB_URI=mongodb://admin:CHANGE_ME@hs-mono-repo-docdb-staging.cluster-abc123.us-east-1.docdb.amazonaws.com:27017/hs_mono_repo?tls=true&tlsCAFile=/app/rds-combined-ca-bundle.pem&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
SPRING_DATA_MONGODB_DATABASE=hs_mono_repo

# Redis - AWS ElastiCache (Staging)
SPRING_DATA_REDIS_HOST=hs-mono-repo-redis-staging.abc123.0001.use1.cache.amazonaws.com
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=CHANGE_ME
SPRING_DATA_REDIS_SSL=true

# Active Profile
SPRING_PROFILES_ACTIVE=staging

# Logging - Less verbose for staging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_HS=INFO

#############################################
# AWS Configuration (Staging)
#############################################
AWS_REGION=us-east-1

# S3 Buckets
S3_BUCKET_PROFILE=hs-mono-repo-mfe-profile-staging
S3_BUCKET_SUMMARY=hs-mono-repo-mfe-summary-staging
S3_BUCKET_WEB_CL=hs-mono-repo-web-cl-staging
S3_BUCKET_WEB_HS=hs-mono-repo-web-hs-staging

# CloudFront Distribution ID (set after terraform apply)
CLOUDFRONT_DISTRIBUTION_ID_STAGING=E1234567890ABC
