{
  "name": "mfe-profile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mfe-profile/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project mfe-profile --web",
  "targets": {
    "build-standalone": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=production vite build --config vite.config.standalone.ts --mode production",
        "cwd": "apps/mfe-profile"
      },
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/mfe-profile/standalone"]
    }
  }
}
